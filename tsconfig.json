{
    "compilerOptions": {
        "outDir": "build",
        "target": "esnext",
        "module": "UMD",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "esnext",


        ]
    },
    
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}